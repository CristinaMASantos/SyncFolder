{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net7.0/SyncFolderApp.dll",
            "args": [
                "${workspaceFolder}/Folders/SourceFolder",
                "${workspaceFolder}/Folders/ReplicaFolder",
                "60",
                "${workspaceFolder}/LogFile/log.txt"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        }
    ]
}
